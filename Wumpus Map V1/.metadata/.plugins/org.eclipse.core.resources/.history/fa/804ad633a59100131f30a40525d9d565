import java.awt.Point;

public class Player extends Actor
{
	public boolean hasTreasure;
	
	public Player(int x, int y, int size)
	{
		super(x, y, size);
		this.hasTreasure = false;
	}
	
	public Player(Point position, int size)
	{
		super(position, size);
		this.hasTreasure = false;
	}
	
	public String getPlayerSenses(int[] triggerArray)
	{
		String senses = "";
		
		for(int i = 0; i < triggerArray.length; i ++)
		{
			for(int j = 0; j < triggerArray[i]; j ++)
			{
				if(i == 0)
				{
					senses += "You hear an echo from far below you.\n";
				}
				else if(i == 1)
				{
					senses += "You feel the fluttering of wings.\n";
				}
				else if(i == 2)
				{
					senses += "You smell an awful stench.\n";
				}
				else if(i == 3)
				{
					senses += "You see a faint glittering of gold.\n";
				}
				else if(i == 4)
				{
					senses += "You feel a draft from outside.\n";
				}
			}
		}
		
		return senses;
	}
}
